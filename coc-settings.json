{
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "go",
    "json",
    "haskell",
    "elixir",
    "vue",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte",
    "html"
  ],
  "snippets.autoTrigger": true,
  "go.disable": { "workspaceFolders": false },
  "languageserver": {
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"],
      "initializationOptions": {
        "haskell": {}
      }
    }
  }
}
